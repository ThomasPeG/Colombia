---
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  imageAlt: string;
  href: string;
}

const { title, description, imageUrl, imageAlt, href } = Astro.props;
---

<a href={href} class="card hover:shadow-xl transition-all duration-300 cursor-pointer">
  <img src={imageUrl} alt={imageAlt} class="w-full h-72 object-cover rounded-lg mb-4">
  <h3 class="text-2xl font-bold mb-3 text-emerald-700">{title}</h3>
  <p class="text-gray-600 leading-relaxed">{description}</p>
</a>