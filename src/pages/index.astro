---
import Layout from '../layouts/Layout.astro'
import { paisajes } from '../data/paisajes'
import { culturas } from '../data/cultura'
import { gastronomia } from '../data/gastronomia'
---

<Layout title="Colombia - Un País Mágico">
  <header class="relative overflow-hidden bg-gradient-to-b from-yellow-400 via-blue-600 to-red-700 text-white">
    <div class="absolute inset-0 bg-black/40 z-10"></div>
    <div class="relative z-20 container mx-auto px-4 py-20 text-center">
      <h1 class="text-6xl font-bold mb-6 animate-fade-in text-shadow">
        Colombia
        <span class="block text-2xl mt-2">Tierra de Magia y Diversidad</span>
      </h1>
      <p class="text-xl mb-8 max-w-3xl mx-auto leading-relaxed">
        Descubre un país donde la naturaleza, la cultura y la calidez de su gente se fusionan para crear experiencias inolvidables. Desde las alturas de los Andes hasta las playas del Caribe, Colombia te espera con sus sabores, colores y sonidos únicos.
      </p>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto text-center">
        <div class="bg-white/20 backdrop-blur-sm rounded-lg p-4">
          <p class="text-3xl font-bold">32</p>
          <p class="text-sm">Departamentos</p>
        </div>
        <div class="bg-white/20 backdrop-blur-sm rounded-lg p-4">
          <p class="text-3xl font-bold">1,141,748</p>
          <p class="text-sm">km² de Territorio</p>
        </div>
        <div class="bg-white/20 backdrop-blur-sm rounded-lg p-4">
          <p class="text-3xl font-bold">51.52M</p>
          <p class="text-sm">Habitantes</p>
        </div>
        <div class="bg-white/20 backdrop-blur-sm rounded-lg p-4">
          <p class="text-3xl font-bold">311</p>
          <p class="text-sm">Ecosistemas</p>
        </div>
      </div>
    </div>
  </header>

  <main class="container mx-auto px-4 py-16">
    {/* Sección de Paisajes */}
    <section class="mb-24">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold mb-4">Paisajes Inolvidables</h2>
        <p class="text-xl text-gray-600">Descubre la diversidad natural de Colombia</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
        {paisajes.slice(0, 2).map(destino => (
          <article class="relative group overflow-hidden rounded-2xl shadow-xl">
            <img 
              src={destino.imageUrl} 
              alt={destino.title}
              class="w-full h-[400px] object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent flex flex-col justify-end p-8 text-white">
              <h3 class="text-2xl font-bold mb-2">{destino.title}</h3>
              <p class="mb-4">{destino.description}</p>
            </div>
          </article>
        ))}
      </div>
      <div class="text-center">
        <a 
          href="/paisajes" 
          class="inline-flex items-center px-8 py-3 text-lg font-medium text-white bg-blue-600 rounded-full hover:bg-blue-700 transition-colors duration-300 shadow-lg hover:shadow-xl"
        >
          Explorar más paisajes
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </section>

    {/* Sección de Cultura */}
    <section class="mb-24 bg-gray-50 py-16 rounded-3xl">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold mb-4">Nuestra Rica Cultura</h2>
        <p class="text-xl text-gray-600">Tradiciones que cuentan historias</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto px-4 mb-8">
        {culturas.slice(0, 2).map(cultura => (
          <article class="bg-white rounded-xl overflow-hidden shadow-lg group hover:shadow-2xl transition-shadow duration-300">
            <div class="relative">
              <img 
                src={cultura.imageUrl} 
                alt={cultura.title}
                class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-105"
                
              />
            </div>
            <div class="p-6">
              <h3 class="text-2xl font-bold mb-2">{cultura.title}</h3>
              <p class="text-gray-600 mb-4">{cultura.description}</p>
            </div>
          </article>
        ))}
      </div>
      <div class="text-center">
        <a 
          href="/cultura" 
          class="inline-flex items-center px-8 py-3 text-lg font-medium text-blue-600 border-2 border-blue-600 rounded-full hover:bg-blue-600 hover:text-white transition-colors duration-300"
        >
          Descubrir más cultura
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </section>

    {/* Sección de Gastronomía */}
    <section class="mb-24">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold mb-4">Sabores de Colombia</h2>
        <p class="text-xl text-gray-600">Un festín para los sentidos</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
        {gastronomia.slice(0, 2).map(plato => (
          <article class="relative group overflow-hidden rounded-2xl shadow-xl">
            <img 
              src={plato.imageUrl} 
              alt={plato.title}
              class="w-full h-[300px] object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent flex flex-col justify-end p-8 text-white">
              <h3 class="text-2xl font-bold mb-2">{plato.title}</h3>
              <p class="mb-4">{plato.description}</p>
            </div>
          </article>
        ))}
      </div>
      <div class="text-center">
        <a 
          href="/gastronomia" 
          class="inline-flex items-center px-8 py-3 text-lg font-medium text-white bg-yellow-600 rounded-full hover:bg-yellow-700 transition-colors duration-300 shadow-lg hover:shadow-xl"
        >
          Explorar nuestra gastronomía
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </section>
  </main>
</Layout>

<style>
  .text-shadow {
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
  }

  @keyframes fade-in {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out;
  }
</style>

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<h1>Astro</h1>
	</body>
</html>
